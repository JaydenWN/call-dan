<style>
    .container {
        color: white;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    h2 {
        font-size: 1.65rem;
        text-transform: uppercase;
    }
    .social-link {
        display: flex;
        gap: 1rem;
        flex-direction: column;
        margin-top: 4rem;
    }
    .social-link a {
        font-size: 1.35rem;
        text-transform: uppercase;
        text-decoration: none;
        color: var(--gold);
