---
import { Image } from "astro:assets";
import sendIcon from "@icons/send.svg";
import emailIcon from "@icons/email-white.svg";
import phoneIcon from "@icons/phone-white.svg";
---

<section id="contact" aria-labelledby="contact-heading">
    <div class="container">
        <h2 id="contact-heading">Get in Touch with Dan and the Team Today!</h2>
        <p class="intro">
            Fill in the form below and weâ€™ll be back to you ASAP with your free
            handyman service quote.
        </p>

        <form
            class="contact-form"
            name="contact"
            data-netlify="true"
            method="POST"
            id="contact-form"
        >
            <div class="form-input">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required />
            </div>

            <div class="form-input">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required />
            </div>

            <div class="form-input">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" required />
            </div>

            <div class="form-input">
                <label for="suburb">Suburb</label>
                <input type="text" id="suburb" name="suburb" />
            </div>

            <div class="form-input">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="6"></textarea>
            </div>

            <button type="submit" class="btn-send">
                <Image src={sendIcon} alt="send message icon" />
                <span>Send Message</span>
            </button>
        </form>
    </div>
</section>

<style>
    section {
        color: white;
    }
    h2 {
        text-transform: uppercase;
        font-size: 1.65rem;
    }
    h3 {
        color: white;
        font-size: 1.35rem;
    }

    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    form {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .form-input {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    input,
    textarea {
        padding: 0.6rem;
        background-color: inherit;
        border: 1px solid var(--dark);
        border-radius: 6px;
        color: white;
        font-size: 1rem;
        font-family: "paragraph", sans-serif;
    }

    button {
        background-color: var(--gold);
        border: 0px;
        border-radius: 6px;
        padding: 0.7rem 1rem;
        font-family: "paragraph", sans-serif;
        font-size: 1rem;
        max-width: fit-content;
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    a {
        display: flex;
        gap: 1rem;
        text-decoration: none;
        color: white;
        align-items: center;
    }
    .contact-form {
        scroll-margin: 4rem;
    }
    @media (min-width: 768px) {
        form {
            width: 75%;
            margin-top: 2rem;
        }
    }
    @media (min-width: 1024px) {
        h2 {
            font-size: 3rem;
        }
        .container {
            align-items: center;
        }
        form {
            width: 460px;
        }
    }
</style>
