---
import ServiceCard from "./Service_Card.astro";
import MouldIcon from "@icons/mould-removal-white.svg";
import WindowIcon from "@icons/window-cleaning-white.svg";
import FlyIcon from "@icons/fly-screen-white.svg";
import WeldIcon from "@icons/welding-white.svg";
import GutterIcon from "@icons/gutter-cleaning-white.svg";
import eolIcon from "@icons/end-of-lease-cleans-black.svg";
import pressureIcon from "@icons/pressure-washing-black.svg";

import MoldImage from "@images/sydney-mold-removal.webp";
import WindowImage from "@images/sydney-handyman-window-clean.webp";
import FlyImage from "@images/sydney-handyman-fly-screen-replacement.png";
import WeldImage from "@images/sydney-handyman-welding.webp";
import GutterImage from "@images/handyman-gutter-cleaning-sydney.png";
import pressureImage from "@images/pressure-washing-sydney.png";
import eolCleanImage from "@images/end-of-lease-clean.png";
---

<section class="service-list">
    <div class="container">
        <ServiceCard
            icon={MouldIcon}
            img={MoldImage}
            title="Mold Removal"
            text="Mold doesn't just look unsightly, it can affect your health and damage your property. Call Dan for effective mould removal services that leave your home clean, fresh, and safe for your family."
            reasons={[
                "Fast, thorough mould treatment",
                "Safe, family friendly methods",
                "Protect your health and property",
                "Local and reliable handyman",
            ]}
            cta="Request a Mold Removal Quote"
        />
    </div>
    <div class="container">
        <ServiceCard
            icon={WindowIcon}
            img={WindowImage}
            title="Window Cleaning"
            text="Sparkling clean windows make a huge difference to the appearance of your home or office. Call Dan provides professional window cleaning services for spotless, streak free results every time."
            reasons={[
                "Professional cleaning equipment",
                "Careful attention to detail",
                "Quick and convenient service",
                "Affordable local prices",
            ]}
            cta="Request a Window Clean Quote"
        />
    </div>

    <div class="container">
        <ServiceCard
            icon={WeldIcon}
            img={WeldImage}
            title="Welding"
            text="Need reliable welding repairs around your home or commercial space? Call Dan handles welding tasks quickly, safely, and professionally, ensuring structural integrity and peace of mind."
            reasons={[
                "Expert welding services",
                "Safe and durable results",
                "Prompt, reliable response",
                "Friendly local handyman",
            ]}
            cta="Request a Welding Quote"
        />
    </div>

    <div class="container">
        <ServiceCard
            icon={FlyIcon}
            img={FlyImage}
            title="Fly Screen Replacement"
            text="Sparkling clean windows make a huge difference to the appearance of your home or office. Call Dan provides professional window cleaning services for spotless, streak free results every time."
            reasons={[
                "Professional cleaning equipment",
                "Careful attention to detail",
                "Quick and convenient service",
                "Affordable local prices",
            ]}
            cta="Get a quote now"
        />
    </div>

    <div class="container">
        <ServiceCard
            icon={GutterIcon}
            img={GutterImage}
            title="Gutter Cleaning"
            text="Blocked gutters can lead to costly water damage and leaks. Call Dan provides reliable gutter cleaning to keep your home protected and your gutters flowing freely."
            reasons={[
                "Complete gutter clearing and debris removal",
                "Protect your roof and property",
                "Quick, hassle free service",
                "Local handyman you can trust",
            ]}
            cta="Get a quote now"
        />
    </div>

    <div class="container">
        <ServiceCard
            icon={eolIcon}
            img={eolCleanImage}
            title="End of Lease Cleaning"
            text="Moving out? Make sure you leave your place spotless and stress free. Call Dan offers thorough end of lease cleans to help you get your full bond back with no fuss."
            reasons={[
                "Professional standard cleaning",
                "Every corner left sparkling",
                "Reliable and efficient team",
                "Great value for local renters",
            ]}
            cta="Get a quote now"
        />
    </div>

    <div class="container">
        <ServiceCard
            icon={pressureIcon}
            img={pressureImage}
            title="Pressure Washing"
            text="Built-up grime and dirt can make your surfaces look tired and worn. Call Dan delivers powerful pressure washing services that leave driveways, paths, and outdoor areas looking fresh and clean."
            reasons={[
                "High pressure deep cleaning",
                "Perfect for concrete brick and stone",
                "Fast and effective results",
                "Affordable service across South West Sydney",
            ]}
            cta="Get a quote now"
        />
    </div>
</section>

<style>
    .service-list .container:nth-of-type(even) {
        background-color: var(--dark);
    }
    @media (min-width: 1440px) {
        .service-list .container:nth-of-type(even) {
            background-color: inherit;
        }
    }
</style>
